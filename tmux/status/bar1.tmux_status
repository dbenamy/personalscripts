
# everything black on magenta
set -g status-fg white
set -g status-bg magenta

set-option -g window-status-current-bg magenta
set-option -g window-status-current-fg white

set-option -g status-justify "left"

set -g status-left-length 16
set -g status-right-length 70
set -g status-left '[#S]'
set -g status-right '#[fg=white]#(whoami)#[fg=yellow]@#[default]#[fg=cyan bright]#H#[default] #[fg=white bright][#(netspeed)] #(tmux_time.py)'

